package app_java_1;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Map.Entry;


public class ListNode {
	
	public static void main(String[] args) {
		 int[][] arr1 = {{1, 2}, {3, 4}, {5, 6}};
		 int totalElements = 0;
		 for (int i = 0; i < arr1.length; i++) {
	            totalElements += arr1[i].length;
	        }

	        // Create a new 1-dimensional array with the size equal to the total number of elements
	        int[] combinedArray = new int[totalElements];

	        // Copy the elements from arr1 into the combinedArray
	        int index = 0;
	        for (int i = 0; i < arr1.length; i++) {
	            for (int j = 0; j < arr1[i].length; j++) {
	                combinedArray[index] = arr1[i][j];
	                index++;
	            }
	        }

	        // Print the combinedArray
	        for (int i = 0; i < combinedArray.length; i++) {
	            System.out.print(combinedArray[i] + " ");
	        }
	}
}
